<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.CitySelectionFragment">

    <LinearLayout
        style="@style/FragmentCityLinerLayout"
        >

        <CheckBox
            android:id="@+id/checkedSystem"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selected_cities"
            android:checked="false" />

        <ListView
            android:id="@+id/listView"
            style="@style/FragmentCityListView"
            android:choiceMode="multipleChoice"
            android:saveEnabled="false"
            android:visibility="visible" />

        <ListView
            android:choiceMode="singleChoice"
            android:id="@+id/listViewElect"
            style="@style/FragmentCityListView"
            android:visibility="gone"
            android:saveEnabled="false"
            />

    </LinearLayout>

</FrameLayout>